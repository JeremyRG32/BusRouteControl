@model RegisterViewModel


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bus Route Control System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #e0e0e0;
        }

        .card {
            border-radius: 16px;
        }

        .nav-tabs .nav-link.active {
            background-color: #0d6efd;
            color: white;
        }

        .brand {
            font-size: 32px;
            font-weight: bold;
            color: #0d6efd;
            text-align: center;
        }

        .logo {
            max-width: 120px;
            display: block;
            margin: 0 auto;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="text-center mb-4">
                    <img src="https://img.icons8.com/?size=100&id=241&format=png&color=000000" alt="Logo" class="logo">
                    <h1 class="brand">Bus Route Control</h1>
                </div>
                <div class="card shadow-sm">
                    <div class="card-body">
                        <ul class="nav nav-tabs mb-3" id="authTab" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="login-tab" data-bs-toggle="tab" data-bs-target="#login" type="button">
                                    Login
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="register-tab" data-bs-toggle="tab" data-bs-target="#register" type="button">
                                    Register
                                </button>
                            </li>
                        </ul>

                        <div class="tab-content" id="authTabContent">

                            <div class="tab-pane fade show active" id="login" role="tabpanel">
                                @if (TempData["ErrorMessage"] != null)
                                {
                                    <div class="alert alert-danger">
                                        @TempData["ErrorMessage"]
                                    </div>
                                }
                                @if (TempData["SuccessMessage"] != null)
                                {
                                    <div class="alert alert-danger">
                                        @TempData["SuccessMessage"]
                                    </div>
                                }
                                <form asp-action="Login" method="post">
                                    <div class="mb-3">
                                        <label for="Email" class="form-label">Email address</label>
                                        <input type="email" class="form-control" id="Email" name="Email" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="Password" class="form-label">Password</label>
                                        <input type="password" class="form-control" id="Password" name="Password" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="Role" class="form-label">Role</label>
                                        <select class="form-select" id="Role" name="Role" required>
                                            <option value="">Select Role</option>
                                            <option value="Admin">Admin</option>
                                            <option value="Client">Client</option>
                                        </select>
                                    </div>
                                    <button type="submit" class="btn btn-primary w-100">Login</button>
                                </form>

                            </div>

                            <div class="tab-pane fade" id="register" role="tabpanel">
                                @if (TempData["ErrorMessage"] != null)
                                {
                                    <div class="alert alert-danger">
                                        @TempData["ErrorMessage"]
                                    </div>
                                }
                                @if (TempData["SuccessMessage"] != null)
                                {
                                    <div class="alert alert-danger">
                                        @TempData["SuccessMessage"]
                                    </div>
                                }
                                <form asp-action="Register" method="post">
                                    <div class="mb-3">
                                        <label for="Name" class="form-label">Full Name</label>
                                        <input type="text" class="form-control" id="Name" name="Name" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="Email" class="form-label">Email address</label>
                                        <input type="email" class="form-control" id="Email" name="Email" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="Password" class="form-label">Password</label>
                                        <input type="password" class="form-control" id="Password" name="Password" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="Role" class="form-label">Role</label>
                                        <select class="form-select" id="Role" name="Role" required readonly disabled>
                                            <option value="Client" selected>Client</option>
                                        </select>
                                        <input type="hidden" name="Role" value="Client" />
                                    </div>
                                    <button type="submit" class="btn btn-success w-100">Register</button>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
